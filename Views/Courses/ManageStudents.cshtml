@model RSWEB.ViewModels.CourseManageStudentsVM

<h2>Manage Students</h2>
<h4>@Model.CourseTitle</h4>

<form asp-action="ManageStudents" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="CourseTitle" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Enroll</th>
                <th>Index</th>
                <th>Student</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Students[i].Selected" />
                        <input type="hidden" asp-for="Students[i].StudentDbId" />
                        <input type="hidden" asp-for="Students[i].Index" />
                        <input type="hidden" asp-for="Students[i].FullName" />
                    </td>
                    <td>@Model.Students[i].Index</td>
                    <td>@Model.Students[i].FullName</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="EditEnrollmentDetails"
       asp-route-id="@Model.CourseId"
       class="btn btn-outline-primary">
        Edit enrollment details
    </a>

    <a asp-action="Details" asp-route-id="@Model.CourseId" class="btn btn-secondary">
        Back
    </a>
</form>

