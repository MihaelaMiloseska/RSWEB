@model IEnumerable<RSWEB.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Students</h1>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i> Create New
    </a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="studentId" class="form-control"
                   placeholder="Index..."
                   value="@(ViewData["StudentIdFilter"] ?? "")" />
        </div>

        <div class="col-md-4">
            <input type="text" name="firstName" class="form-control"
                   placeholder="First name..."
                   value="@(ViewData["FirstNameFilter"] ?? "")" />
        </div>

        <div class="col-md-4">
            <input type="text" name="lastName" class="form-control"
                   placeholder="Last name..."
                   value="@(ViewData["LastNameFilter"] ?? "")" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel me-1"></i> Filter
            </button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                Clear
            </a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StudentId)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.EnrollmentDate)</th>
            <th>@Html.DisplayNameFor(model => model.AcquiredCredits)</th>
            <th>@Html.DisplayNameFor(model => model.CurrentSemester)</th>
            <th>@Html.DisplayNameFor(model => model.EducationLevel)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EnrollmentDate</td>
                <td>@item.AcquiredCredits</td>
                <td>@item.CurrentSemester</td>
                <td>@item.EducationLevel</td>

                <td class="text-end text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary me-1">
                        Edit
                    </a>

                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-secondary me-1">
                        Details
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-danger">
                        Delete
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

