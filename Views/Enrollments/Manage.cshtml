@model RSWEB.ViewModels.ManageEnrollmentsVM

<h2>Manage enrollments for @Model.CourseTitle</h2>

<form asp-action="Manage" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseId" />

    <div class="row mb-3">
        <div class="col-md-2">
            <label class="form-label">Year</label>
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Semester</label>
            <select asp-for="Semester" class="form-select">
                <option value="Winter">Winter</option>
                <option value="Summer">Summer</option>
            </select>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Enroll</th>
                <th>Student</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Students[i].Selected" />
                        <input type="hidden" asp-for="Students[i].StudentId" />
                        <input type="hidden" asp-for="Students[i].Display" />
                    </td>
                    <td>@Model.Students[i].Display</td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
